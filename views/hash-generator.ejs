<%- include('partials/header') %>

<h2>Générateur de Hash Bcrypt</h2>

<form action="/debug/hash" method="POST" class="mb-4">
  <div class="mb-3">
    <label class="form-label">Mot de passe</label>
    <input type="text" name="password" class="form-control" placeholder="Mot de passe en clair" required>
  </div>
  <button type="submit" class="btn btn-primary">Générer le hash</button>
</form>

<% if (hash) { %>
  <div class="alert alert-success">
    <strong>Hash généré :</strong><br>
    <code><%= hash %></code>
  </div>
<% } %>

<% if (error) { %>
  <div class="alert alert-danger"><%= error %></div>
<% } %>

<%- include('partials/footer') %>
